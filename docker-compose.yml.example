version: "3.5"

services:
    siiifu:
        restart: always
        build: ./web
        ports:
            - 5002:5000
        expose:
            - 5000
        volumes:
            - ./web:/app
            - cache-volume:/data/cache
        command: /usr/local/bin/gunicorn -k gevent --reload --pythonpath /app --workers 5 --worker-connections 100 --timeout 300 -b :5000 siiifu:app

    worker:
        restart: always
        build: ./web
        expose:
            - 5001
        volumes:
            - ./web:/app
            - cache-volume:/data/cache
        command: /usr/local/bin/gunicorn -k gevent --reload --pythonpath /app --workers 10 --worker-connections 1000 --timeout 300 -b :5001 image:app
        network_mode: host

    siiifu-front:
        restart: always
        image: nginx
        expose:
            - 8080
        ports:
            - 8080:8080
        volumes:
            - ./etc/default.conf:/etc/nginx/conf.d/default.conf
            - ./web/static:/www/static
            - cache-volume:/data/cache

volumes:
    cache-volume:


